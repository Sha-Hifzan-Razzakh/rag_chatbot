# === General app settings ===
ENVIRONMENT=development
DEBUG=true

# === OpenAI / LLM ===
# Get an API key from OpenAI and paste it here (do NOT commit real keys).
OPENAI_API_KEY=Paste_Your_OpenAI_API_Key_Here
# Optional: custom base URL if you're using a proxy/gateway.
OPENAI_API_BASE=

# Main chat/completion model
CHAT_MODEL_NAME=gpt-4.1-mini
# Embedding model for RAG
EMBEDDING_MODEL_NAME=text-embedding-3-large

# === Postgres + pgvector ===
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/rag_chatbot
DB_ECHO=false

PGVECTOR_COLLECTION=documents
PGVECTOR_SCHEMA=

# === RAG defaults ===
DEFAULT_TOP_K=5
MAX_TOP_K=20
DEFAULT_TEMPERATURE=0.2

# Chunking defaults (used by ingestion/chunking)
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=150

# === Upload / ingestion ===
# Temp dir where uploads are stored before extraction/chunking
UPLOAD_TMP_DIR=/app/.uploads
# Max allowed upload size (enforced while streaming the upload to disk)
MAX_UPLOAD_MB=25
# (Optional) explicit bytes override if you prefer bytes; otherwise backend derives from MAX_UPLOAD_MB
# MAX_UPLOAD_BYTES=26214400

# OCR defaults (frontend can override per upload; backend uses these as defaults if you wire them)
OCR_DEFAULT_LANGUAGE=eng
OCR_DEFAULT_DPI=200
OCR_MIN_CHARS=50

# === CORS ===
CORS_ALLOW_ORIGINS=http://localhost:8000,http://localhost:8501,http://localhost:3000

# === Frontend config ===
BACKEND_URL=http://backend:8000

# === Audio ===
ENABLE_TTS=true
ENABLE_STT=true
TTS_MODEL_NAME=tts-1
STT_MODEL_NAME=whisper-1
TTS_VOICE=alloy
TTS_FORMAT=mp3
